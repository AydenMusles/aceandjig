<div class="option-selectors">
    <script>
    $(document).ready(function(){
        $('body').hide();
    });

    $(window).load(function(){
        $('body').fadeIn(500);

        $('#clickyboxes-option-color li a, #clickyboxes-option-textile li a, #clickyboxes-option-textiles li a').each(function(){
            if ($(this).hasClass('active')) {
                var color = $(this).data('value');
                $('.color-options .color-label').html(color);
                $('.product-{{ product.title | handle }} .thumbnails a').each(function(){
                    if ($(this).attr('title') == color) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
                $('.slideshow').slick('slickFilter', '.'+ color +'');
            }
        });

        $('#clickyboxes-option-color li a, #clickyboxes-option-textile li a, #clickyboxes-option-textiles li a').click(function(){
            var color = $(this).data('value');
            $('.color-options .color-label').html(color);
            $('.product-{{ product.title | handle }} .thumbnails a').each(function(){
                if ($(this).attr('title') == color) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });

            $('.slideshow').slick('slickUnfilter');
            $('.slideshow').slick('slickFilter', '.'+ color +'');
        });

    });
    </script>
